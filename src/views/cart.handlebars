<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold text-blue-600 mb-4">Products in Cart {{cartId}}</h1>
    <table class="min-w-full table-auto shadow-md rounded-lg overflow-hidden">
      <thead class="bg-blue-500 text-white">
        <tr>
          <th class="px-4 py-2">Product ID</th>
          <th class="px-4 py-2">Title</th>
          <th class="px-4 py-2">Description</th>
          <th class="px-4 py-2">Price</th>
          <th class="px-4 py-2">Code</th>
          <th class="px-4 py-2">Stock</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">cantidad</th>
        </tr>
      </thead>
      <tbody>
        {{#each products }} {{log this}}
          <tr class="bg-white border-b">
            <td class="px-4 py-2">{{this.productId._id}}</td>
            <td class="px-4 py-2">{{this.productId.title}}</td>
            <td class="px-4 py-2">{{this.productId.description}}</td>
            <td class="px-4 py-2">${{this.productId.price}}</td>
            <td class="px-4 py-2">{{this.productId.code}}</td>
            <td class="px-4 py-2">{{this.productId.stock}}</td>
            <td class="px-4 py-2">{{this.productId.status}}</td>
            <td class="px-4 py-2">{{this.quantity}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

</div>
<a href="/views/products" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Products</a>