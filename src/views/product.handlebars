
<div class="container mx-auto p-4">
  {{#if usuario}}
  <h1 class="text-3xl font-bold text-blue-600 mb-4">Bienvenido {{usuario.nombre}}!!</h1>
  <h4 class="text-3xl font-bold text-blue-600 mb-4">email: {{usuario.email}} <br>Rol: {{usuario.rol}}</h4>
{{/if}}

<h1 class="text-3xl font-bold text-blue-600 mb-4">Products</h1>

  <table class="min-w-full table-auto shadow-md rounded-lg overflow-hidden">
    <thead class="bg-blue-500 text-white">
      <tr>
        <th class="px-4 py-2">ID</th>
        <th class="px-4 py-2">Title</th>
        <th class="px-4 py-2">Description</th>
        <th class="px-4 py-2">Price</th>
        <th class="px-4 py-2">Code</th>
        <th class="px-4 py-2">Stock</th>
        <th class="px-4 py-2">Status</th>
        <th class="px-4 py-2">Agregar a Cart</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
      <tr class="bg-white border-b">
        <td class="px-4 py-2">{{this._id}}</td>
        <td class="px-4 py-2">{{this.title}}</td>
        <td class="px-4 py-2">{{this.description}}</td>
        <td class="px-4 py-2">${{this.price}}</td>
        <td class="px-4 py-2">{{this.code}}</td>
        <td class="px-4 py-2">{{this.stock}}</td>
        <td class="px-4 py-2">{{this.status}}</td>
        <th class="px-4 py-2"> <button
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded add-to-cart"
            data-product-id="{{this._id}}">agregar</button></th>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <div class="flex flex-wrap justify-center mt-4 space-x-2">
    <a href="/views/products?limit={{this.limit}}&page=1"
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Primer Pag.</a>
    {{#if this.hasPrevPage}}
    <a href="/views/products?limit={{this.limit}}&page={{this.prevPage}}"
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Ant Pag.</a>
    {{/if}}
    {{#if hasNextPage}}
    <a href="/views/products?limit={{this.limit}}&page={{this.nextPage}}"
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Sig Pag.</a>
    {{/if}}
    <a href="/views/products?limit={{this.limit}}&page={{this.totalPages}}"
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Ult Pag.</a>
      <a href="/views/cart/657901d1973ef35614b9b24f" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Carts</a>
  </div>
 
  <script src="../public/js/productos.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
